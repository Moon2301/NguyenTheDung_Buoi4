@model IEnumerable<NguyenTheDung_Buoi4.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm theo danh mục";
    var category = ViewBag.Category as Category;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sản phẩm trong danh mục: @category?.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Ảnh</th>
            <th>Mô tả</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="80" />
                    }
                </td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>
