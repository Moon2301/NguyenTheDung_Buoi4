@model NguyenTheDung_Buoi4.Models.Product

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-body">
            <h2 class="text-danger">Delete Product</h2>
            <hr />
            <h4 class="mb-3">Are you sure you want to delete <strong>@Model.Name</strong>?</h4>

            <div class="mb-3">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail mb-2" style="max-width: 200px;" />
                }
                <p><strong>Price:</strong> @Model.Price.ToString("N0") ₫</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Category:</strong> @Model.Category?.Name</p>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
